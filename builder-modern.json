{
  "appId": "com.lawyers.egypt.digital",
  "productName": "lawyer",
  "directories": {
    "output": "dist-modern"
  },
  "files": [
    "**/*",
    "!node_modules/**/*",
    "node_modules/electron-updater/**/*",
    "!.zencoder/**/*",
    "!dist/**/*",
    "!dist-legacy/**/*",
    "!dist-modern/**/*"
  ],
  "asar": {
    "smartUnpack": true
  },
  "asarUnpack": [
    "**/node_modules/electron-updater/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "requestedExecutionLevel": "asInvoker",
    "sign": false,
    "signingHashAlgorithms": [],
    "icon": "icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "icon.ico",
    "uninstallerIcon": "icon.ico",
    "installerHeaderIcon": "icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "مكتبي",
    "artifactName": "lawyer-modern-setup-${version}.exe"
  }
}